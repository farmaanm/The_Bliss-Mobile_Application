<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thebliss">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheBliss">
        <activity
            android:name=".CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".PhotographyActivity"
            android:exported="false"
            android:label="@string/title_activity_photography"
            android:theme="@style/Theme.TheBliss.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CakesActivity"
            android:exported="false"
            android:label="@string/title_activity_cakes"
            android:theme="@style/Theme.TheBliss.NoActionBar" />
        <activity
            android:name=".FlowersActivity"
            android:exported="false"
            android:label="@string/title_activity_flowers"
            android:theme="@style/Theme.TheBliss.NoActionBar" />
        <activity
            android:name=".CostumesActivity"
            android:exported="false"
            android:label="@string/title_activity_costumes"
            android:theme="@style/Theme.TheBliss.NoActionBar" />
        <activity
            android:name=".GiftsActivity"
            android:exported="false"
            android:label="@string/title_activity_gifts"
            android:theme="@style/Theme.TheBliss.NoActionBar" />
        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:label="@string/title_activity_cart"
            android:theme="@style/Theme.TheBliss.NoActionBar" />
        <activity
            android:name=".ContactActivity"
            android:exported="false"
            android:label="@string/title_activity_contact"
            android:theme="@style/Theme.TheBliss.NoActionBar" />
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.TheBliss.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>